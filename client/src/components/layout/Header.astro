---
import { Image } from "astro:assets";
import Logo from "../../assets/images/eliza-logo.svg";
import LanguageDropdown from "./LanguageDropdown";

const { lang = "lv" } = Astro.params;
const currentPath = Astro.url.pathname;
import { mainLinks, secondaryLinks } from "./Links";
import BurgerMenu from "./BurgerMenu";

const isActive = (path: string) =>
    currentPath.includes(path) ? "-link active" : "-link";
---

<nav class="header">
    <div class="-wrapper">
        <div class="-container">
            <a href={`/${lang}`} class="-logo-link">
                <Image src={Logo} alt="Logo" class="-logo" />
            </a>
            <div class="-links">
                {
                    mainLinks.map((link) => {
                        const isSale = link.href === "/sale";
                        return (
                            <a
                                href={
                                    link.href.startsWith("http")
                                        ? link.href
                                        : `/${lang}${link.href}`
                                }
                                class={`${isActive(link.href)} ${isSale ? "sale" : ""}`}
                            >
                                {link[`label_${lang}`]}
                            </a>
                        );
                    })
                }
            </div>
            <div class="-links right">
                {
                    secondaryLinks.map((link) => (
                        <a
                            href={`/${lang}${link.href}`}
                            class={isActive(link.href)}
                        >
                            {link[`label_${lang}`]}
                        </a>
                    ))
                }
                <LanguageDropdown
                    client:load
                    currentLang={lang}
                    currentPath={currentPath}
                />
                <BurgerMenu currentPath={currentPath} lang={lang} client:load />
            </div>
        </div>
    </div>
</nav>

<style>
    .header {
        --header-height: var(--header, 80px);
        --mobile-height: 70px;
        --link-gap: 40px;
        --wrapper-padding: 20px;
        position: fixed;
        top: 0;
        z-index: 100;
        width: 100%;
        height: var(--header-height);
        background: var(--layout);
        color: #fff;
        @media (max-width: 768px) {
            height: var(--mobile-height);
        }
    }

    .-wrapper {
        height: 100%;
        padding: 0 var(--wrapper-padding);
        display: flex;
        z-index: 100;
        align-items: center;
        @media (max-width: 1600px) {
            --wrapper-padding: 10px;
        }
    }

    .-container {
        width: 100%;
        height: 100%;
        display: grid;
        grid-template-columns: 1fr auto 1fr;
        align-items: center;
        gap: 25px;
    }

    .-logo-link {
        display: block;
    }

    .-logo {
        width: 120px;
        height: auto;
        margin-top: 2px;
        @media (max-width: 768px) {
            width: 110px;
        }
    }
    .-links {
        display: flex;
        gap: var(--link-gap);
        flex-wrap: wrap;
        align-items: center;
        @media (max-width: 1400px) {
            gap: 20px;
        }
        @media (max-width: 600px) {
            gap: 12px;
        }
        &.right {
            justify-self: end;
        }
    }

    .-link {
        color: #fff;
        font-size: 14px;
        text-decoration: none;
        transition: all 0.3s ease;
        @media (max-width: 1400px) {
            font-size: 12px;
        }
        &:hover,
        &.active {
            color: aqua;
        }
        @media (max-width: 1200px) {
            display: none;
        }

        &.sale {
            background: linear-gradient(
                135deg,
                #dc3545 0%,
                #c82333 100%
            ) !important;
            color: #ffffff !important;
            padding: 6px 14px !important;
            border-radius: 6px !important;
            font-weight: 600 !important;
            box-shadow: 0 2px 8px rgba(220, 53, 69, 0.4) !important;

            &:hover,
            &.active {
                color: #ffffff !important;
                background: linear-gradient(
                    135deg,
                    #e04555 0%,
                    #d83343 100%
                ) !important;
                box-shadow: 0 4px 12px rgba(220, 53, 69, 0.6) !important;
            }
        }
    }
</style>
