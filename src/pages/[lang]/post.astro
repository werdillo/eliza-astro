---
import Layout from "../../layouts/Layout.astro";
import PostItem from "../../components/PostItem.jsx";
const { lang } = Astro.params;
export function getStaticPaths() {
	return [
		{ params: { lang: "en" } },
		{ params: { lang: "lv" } },
		{ params: { lang: "ru" } },
	];
}
---

<Layout>
	<PostItem client:only lang={lang}/>
</Layout>
