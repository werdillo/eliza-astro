<style scoped>
    .component {
        width: 100%;
        height: 600px;
        background: url('/images/textile.png');
		display: flex;
		align-items: center;
		justify-content: center;
		.-wrapper {
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: 70px;
			width: 80%;
		}
		.-text {
			font-size: 60px;
			text-align: center;
			color: rgb(255, 255, 255);
		}
		.-button {
			height: 40px;
			width: 150px;
			border: 0;
		}
    }
	.furniture-components {
		display: grid;
		grid-template-columns: 1fr 1fr;
		gap: 20px;
		margin: 20px 0;
		@media screen and (max-width: 1200px) {
			grid-template-columns: 1fr;
			gap: 10px;
		}
		.-text {
			font-family: "Avenir", sans-serif;
			font-size: 16px;
			margin-left: 5px;
			&.xl {
				font-weight: 700;
				font-size: 24px;
				margin-bottom: 5px;
				margin-top: 15px;
			}
		}
		.-img {
			width: 100%;
			height: auto;
			min-height: 200px;
			background-color: #f0f0f0;
			box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.4);
			transition: 350ms;
			cursor: pointer;
			&:hover {
				box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.5);
			}
		}
	}
</style>
