---
import Layout from "../../layouts/Layout.astro";
import Matresses from "../../components/Matresses";

export function getStaticPaths() {
	return [
		{ params: { lang: "en" } },
		{ params: { lang: "lv" } },
		{ params: { lang: "ru" } },
	];
}
const { lang } = Astro.params;

---

<Layout>
	<Matresses lang={lang} client:visible />
</Layout>

