---
// src/components/ComingSoon.astro
import Pic6 from "../assets/images/collection/Pic6.jpg";
import { t, type Language } from "../constants/translations";

export interface Props {
    lang?: string; // параметр языка, по умолчанию 'lv'
}

const { lang = "lv" } = Astro.props;
const currentLang = lang as Language;
---

<div class="fullscreen-container">
    <div class="fullscreen-bg" style={`background-image: url(${Pic6.src});`}>
    </div>

    <div class="content">
        <div class="message">
            <h1>{t("comingSoon.title", currentLang)}</h1>
            <p>{t("comingSoon.message", currentLang)}</p>
            <p>{t("comingSoon.subMessage", currentLang)}</p>

            <div class="language-switcher">
                <a href={"/" + lang} class="language-btn"
                    >{t("comingSoon.button", currentLang)}</a
                >
            </div>
        </div>
    </div>
</div>

<style>
    .fullscreen-container {
        position: relative;
        height: 100vh;
        width: 100%;
    }

    .fullscreen-bg {
        position: absolute;
        top: 0;
        left: 0;
        width: 100%;
        height: 100%;
        background-size: cover;
        background-position: center;
        filter: brightness(0.6);
        z-index: -1;
    }

    .content {
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: center;
        height: 100%;
        color: white;
        text-align: center;
        padding: 2rem;
    }

    .message {
        background-color: rgba(0, 0, 0, 0.6);
        padding: 2rem;
        border-radius: 10px;
        max-width: 600px;
    }

    h1 {
        font-size: 2.5rem;
        margin-bottom: 1rem;
    }

    p {
        font-size: 1.2rem;
        margin-bottom: 1.5rem;
    }

    .language-switcher {
        display: flex;
        gap: 1rem;
        margin-top: 1.5rem;
        justify-content: center;
    }

    .language-btn {
        background: none;
        border: 2px solid white;
        color: white;
        padding: 0.5rem 1rem;
        border-radius: 5px;
        cursor: pointer;
        font-size: 1rem;
        transition: all 0.3s ease;
        text-decoration: none;
        display: inline-block;
    }

    .language-btn:hover {
        background-color: white;
        color: black;
    }
</style>
