---
import Layout from "../../layouts/Layout.astro";
import PostItem from "../../components/PostItem.jsx";
const { lang } = Astro.params;

export function getStaticPaths() {
    return [
        { params: { lang: "en" } },
        { params: { lang: "lv" } },
        { params: { lang: "ru" } },
    ];
}

// SEO data by language
const seoData = {
    lv: {
        title: "Raksts - Eliza-K | Mēbeļu un dizaina ziņas un padomi",
        description:
            "Lasiet Eliza-K rakstus par mēbelēm, interjera dizainu un mājokļa iekārtošanas padomiem. Ekspertu ieteikumi un jaunākās tendences mēbeļu pasaulē.",
        keywords:
            "raksts, mēbeļu ziņas, interjera dizains, mājokļa iekārtošana, dizaina padomi, Eliza-K blog, mēbeļu tendences",
    },
    en: {
        title: "Article - Eliza-K | Furniture and Design News and Tips",
        description:
            "Read Eliza-K articles about furniture, interior design and home decoration tips. Expert advice and latest trends in the furniture world.",
        keywords:
            "article, furniture news, interior design, home decoration, design tips, Eliza-K blog, furniture trends",
    },
    ru: {
        title: "Статья - Eliza-K | Новости и советы по мебели и дизайну",
        description:
            "Читайте статьи Eliza-K о мебели, дизайне интерьера и советах по украшению дома. Экспертные советы и последние тенденции в мире мебели.",
        keywords:
            "статья, новости мебели, дизайн интерьера, украшение дома, советы по дизайну, блог Eliza-K, тенденции мебели",
    },
};

const currentSeo = seoData[lang] || seoData.lv;
---

<Layout
    offset={false}
    title={currentSeo.title}
    description={currentSeo.description}
    keywords={currentSeo.keywords}
    url={`/${lang}/post`}
    image="/og-image-post.jpg"
    type="article"
>
    <PostItem client:only lang={lang} />
</Layout>
