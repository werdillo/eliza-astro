<footer class="footer">
    <div class="container">
        <div class="footer-grid">
            {
                contacts.map((contact) => (
                    <div class="footer-section">
                        <h3 class="section-title">{t[contact.key]}</h3>
                        <p>
                            <a
                                href={`https://maps.google.com/?q=${contact.address}`}
                                target="_blank"
                                class="contact-link"
                            >
                                {contact.address}
                            </a>
                        </p>
                        <p>
                            <a href={`mailto:${contact.mail}`}>
                                {contact.mail}
                            </a>
                        </p>
                        <p>
                            {contact.phone
                                .map((phone) => (
                                    <a href={`tel:+371${phone}`}>{phone}</a>
                                ))
                                .reduce(
                                    (prev, curr) =>
                                        prev === null
                                            ? [curr]
                                            : [prev, ", ", curr],
                                    null,
                                )}
                        </p>
                    </div>
                ))
            }
        </div>

        <div class="social-section">
            <div class="social-links">
                {
                    socialLinks.map((social) => (
                        <a
                            href={social.url}
                            target="_blank"
                            rel="noopener noreferrer"
                            class="social-icon"
                            aria-label={social.name}
                        >
                            <svg
                                width="24"
                                height="24"
                                viewBox="0 0 24 24"
                                fill="currentColor"
                            >
                                <path d={social.icon} />
                            </svg>
                        </a>
                    ))
                }
            </div>
        </div>

        <div class="copyright">
            <p>&copy; {new Date().getFullYear()} ELIZA</p>
        </div>
    </div>
</footer>

<style>
    .footer {
        text-align: left;
        background-color: #303030;
        padding: 2rem 0;
        font-family: Arial, sans-serif;
        color: #ffffff;
    }

    .container {
        width: 90%;
        max-width: 1200px;
        margin: 0 auto;
    }

    .footer-grid {
        display: grid;
        grid-template-columns: 1fr;
        gap: 2rem;
    }

    .section-title {
        font-size: 1.25rem;
        font-weight: 700;
        margin-bottom: 1rem;
    }

    .footer-section p {
        margin: 0.5rem 0;
        line-height: 1.5;
    }

    .footer-section a {
        color: #ffffff;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease;
    }

    .footer-section a:hover {
        color: aqua; /* Желтый цвет при наведении */
        text-decoration: none;
    }

    .footer-section a[href^="tel:"]:hover {
        color: aqua;
        text-decoration: none;
    }

    .footer-section a[href^="mailto:"]:hover {
        color: aqua;
        text-decoration: none;
    }

    .social-section {
        margin-top: 1rem;
        padding-top: 2rem;
        text-align: center;
    }

    .social-links {
        display: flex;
        justify-content: center;
        gap: 1.5rem;
        flex-wrap: wrap;
    }

    .social-icon {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 48px;
        height: 48px;
        border-radius: 50%;
        background-color: rgba(255, 255, 255, 0.1);
        color: #ffffff;
        transition: all 0.3s ease;
        text-decoration: none;
    }

    .social-icon:hover {
        background-color: aqua;
        color: #303030;
    }

    .social-icon svg {
        width: 24px;
        height: 24px;
    }

    .copyright {
        margin-top: 2rem;
        padding-top: 1.5rem;
        border-top: 1px solid #444;
        text-align: center;
        font-size: 0.9rem;
    }

    /* Media query for tablets and larger screens */
    @media (min-width: 768px) {
        .footer-grid {
            grid-template-columns: repeat(3, 1fr);
        }
    }

    /* Media query for smaller screens */
    @media (max-width: 767px) {
        .section-title {
            font-size: 1.1rem;
        }

        .footer {
            padding: 2rem 0;
            padding-bottom: 70px;
        }

        .social-section {
            margin-top: 2rem;
            padding-top: 1.5rem;
        }

        .social-title {
            font-size: 1.1rem;
        }

        .social-links {
            gap: 1rem;
        }

        .social-icon {
            width: 44px;
            height: 44px;
        }

        .social-icon svg {
            width: 22px;
            height: 22px;
        }

        .copyright {
            margin-top: 1.5rem;
            padding-top: 1rem;
        }
    }
</style>
