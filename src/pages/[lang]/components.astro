---
import Layout from "../../layouts/Layout.astro";
import { Image } from "astro:assets";
import porolon from "../../assets/images/components/porolon.png";
import textile from "../../assets/images/components/textile.png";

export function getStaticPaths() {
  return [
    { params: { lang: "en" } },
    { params: { lang: "lv" } },
    { params: { lang: "ru" } },
  ];
}

const { lang } = Astro.params;

const translations = {
  lv: {
    components: {
      "porolon-title": "Porolons",
      "porolon-text": "Mēs ražojam izstrādājumus no porolona.",
      "textile-title": "Audumi",
      "textile-text": "Piedāvājam lielu audumu un materiālu izvēli mīkstajām mēbelēm."
    }
  },
  ru: {
    components: {
      "porolon-title": "Поролон",
      "porolon-text": "Изготавливаем из поролона изделия любой сложности.",
      "textile-title": "Ткань",
      "textile-text": "Предлагаем широкий выбор тканей из любого вида волокна для мягкой мебели."
    }
  },
  en: {
    components: {
      "porolon-title": "Foam",
      "porolon-text": "Our company creates goods from foam rubber of any complexity.",
      "textile-title": "Textile",
      "textile-text": "A wide selection of fabrics from any type of fiber for upholstered furniture is available."
    }
  }
};

const t = translations[lang as keyof typeof translations].components;
---

<Layout>
  <div class="furniture-components">
    <div>
      <a href="http://porolons.lv/" target="_blank" rel="noopener noreferrer">
        <Image class='-img' alt='' src={porolon} />
      </a>
      <div class='-text xl'>{t["porolon-title"]}</div>
      <div class='-text'>{t["porolon-text"]}</div>
    </div>
    <div>
      <a href={"/" + lang +"/textile"} rel="noopener noreferrer">
        <Image class='-img' alt='' src={textile} />
      </a>
      <div class='-text xl'>{t["textile-title"]}</div>
      <div class='-text'>{t["textile-text"]}</div>
    </div>
  </div>
</Layout>

<style>
.furniture-components {
  margin: 20px 0;
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 16px;
  width: 100%;
  
  @media (max-width: 768px) {
    grid-template-columns: 1fr;
  }

  .-text {
    font-family: 'Avenir', sans-serif;
    font-weight: 400;
    font-size: 16px;
    margin-left: 5px;
    
    &.xl {
      font-weight: 700;
      font-size: 24px;
      margin-bottom: 5px;
      margin-top: 15px;
    }
  }

  .-img {
    width: 100%;
    height: auto;
    min-height: 200px;
    background-color: #f0f0f0;
    box-shadow: 0px 0px 25px rgba(0, 0, 0, 0.4);
    transition: 350ms;
    cursor: pointer;
    
    &:hover {
      box-shadow: 0px 0px 40px rgba(0, 0, 0, 0.50);
    }
  }
}
</style>