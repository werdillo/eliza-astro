  <style>
	.footer {
		text-align: left;
	  background-color: #303030;
	  padding: 3rem 0;
	  font-family: Arial, sans-serif;
	  color: #ffffff;
	}
  
	.container {
	  width: 90%;
	  max-width: 1200px;
	  margin: 0 auto;
	}
  
	.footer-grid {
	  display: grid;
	  grid-template-columns: 1fr;
	  gap: 2rem;
	}

	.section-title {
	  font-size: 1.25rem;
	  font-weight: 700;
	  margin-bottom: 1rem;
	}
  
	.footer-section p {
	  margin: 0.5rem 0;
	  line-height: 1.5;
	}
  
	.footer-section a {
	  color: #ffffff;
	  text-decoration: none;
	}
  
	.footer-section a:hover {
	  color: #0066cc;
	  text-decoration: underline;
	}
  
	.working-hours {
	  margin-top: 1.5rem;
	}
  
	.hours-title {
	  font-weight: 600;
	  margin-bottom: 0.5rem;
	}
  
	.copyright {
	  margin-top: 2rem;
	  padding-top: 1.5rem;
	  border-top: 1px solid #ddd;
	  text-align: center;
	  font-size: 0.9rem;
	}
  
	/* Media query for tablets and larger screens */
	@media (min-width: 768px) {
	  .footer-grid {
		grid-template-columns: repeat(3, 1fr);
	  }
	}
  
	/* Media query for smaller screens */
	@media (max-width: 767px) {
	  .section-title {
		font-size: 1.1rem;
	  }
	  
	  .footer {
		padding: 2rem 0;
	  }
	  
	  .copyright {
		margin-top: 1.5rem;
		padding-top: 1rem;
	  }
	}
  </style>