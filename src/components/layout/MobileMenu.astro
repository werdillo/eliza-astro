---
import collectionIcon from "../../assets/images/icons/mobile/collection.svg";
import mattressIcon from "../../assets/images/icons/mobile/mattresses.svg";
import porolonIcon from "../../assets/images/icons/mobile/porolon.svg";
import componentsIcon from "../../assets/images/icons/mobile/components.svg";
import horecaIcon from "../../assets/images/icons/mobile/horeca.svg";
import galleryIcon from "../../assets/images/icons/mobile/gallery.svg";
import saleIcon from "../../assets/images/icons/mobile/sale.svg";

import { Image } from "astro:assets";
import { mainLinks } from "./Links";

const { lang = "lv" } = Astro.params;
const currentPath = Astro.url.pathname;

const iconMap = {
    "/collections": collectionIcon,
    "/mattresses": mattressIcon,
    "/sale": saleIcon,
    "https://porolons.lv/": porolonIcon,
    "/components": componentsIcon,
    "/horeca": horecaIcon,
    "/gallery": galleryIcon,
};

const getLabelForLang = (link) => {
    return link[`label_${lang}`] || link.label_en;
};
---

<nav class="mobile-menu">
    <div class="-wrapper">
        {
            mainLinks.map((link) => {
                const href = link.external ? link.href : `/${lang}${link.href}`;
                const isActive = currentPath.includes(link.href);
                const icon = iconMap[link.href];
                const label = getLabelForLang(link);
                const isSale = link.href === "/sale";

                return (
                    <a
                        href={href}
                        class={`-link ${isActive ? "active" : ""} ${isSale ? "sale" : ""}`}
                        target={link.external ? "_blank" : undefined}
                        rel={link.external ? "noopener noreferrer" : undefined}
                    >
                        <div class="-icon">
                            {icon && <Image src={icon} alt={label} />}
                        </div>
                        <span class="-text">{label}</span>
                    </a>
                );
            })
        }
    </div>
</nav>

<style>
    .mobile-menu {
        z-index: 1000;
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(47, 47, 47, 0.95);
        backdrop-filter: blur(10px);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        @media (min-width: 768px) {
            display: none;
        }

        .-wrapper {
            padding: 2px 8px;
            display: flex;
            align-items: center;
            justify-content: space-around;
            max-width: 100%;
        }

        .-link {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 2px;
            color: rgba(255, 255, 255, 0.6);
            text-decoration: none;
            padding: 4px 6px;
            border-radius: 12px;
            transition: all 0.3s ease;
            min-width: 50px;

            &:hover {
                background: rgba(255, 255, 255, 0.1);
                color: #00d4ff;

                .-icon img {
                    opacity: 1;
                }
            }

            &.active {
                color: #ffffff;

                .-icon img {
                    opacity: 1;
                }
            }

            &.sale {
                color: #dc3545 !important;

                .-icon img {
                    opacity: 1 !important;
                    filter: invert(27%) sepia(51%) saturate(2878%)
                        hue-rotate(346deg) brightness(104%) contrast(97%) !important;
                }

                .-text {
                    color: #dc3545 !important;
                }
            }
        }

        .-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 24px;
            height: 24px;

            img {
                width: 20px;
                height: 20px;
                opacity: 0.6;
                transition: all 0.3s ease;
            }
        }

        .-text {
            font-size: 10px;
            font-weight: 500;
            text-align: center;
            line-height: 1.2;

            @media (max-width: 380px) {
                font-size: 9px;
            }
        }

        .-link:hover .-icon img,
        .-link.active .-icon img {
            opacity: 1;
        }
    }
</style>
