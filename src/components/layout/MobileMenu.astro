---
import textileIcon from "../../assets/images/icons/mobile/textile.svg";
import matressesIcon from "../../assets/images/icons/mobile/matresses.svg";
import porolonIcon from "../../assets/images/icons/mobile/porolon.svg";
import componentsIcon from "../../assets/images/icons/mobile/components.svg";
import horecaIcon from "../../assets/images/icons/mobile/horeca.svg";
import galleryIcon from "../../assets/images/icons/mobile/gallery.svg";
import catalogsIcon from "../../assets/images/icons/mobile/catalogs.svg";
import aboutIcon from "../../assets/images/icons/mobile/about.svg";
import { Image } from "astro:assets";
import { mainLinks, secondaryLinks } from "./Links";

const { lang = "lv" } = Astro.params;
const currentPath = Astro.url.pathname;

// Маппинг иконок для основного меню
const iconMap = {
    "/collections": textileIcon,
    "/matressess": matressesIcon,
    "https://porolons.lv/": porolonIcon,
    "/components": componentsIcon,
    "/horeca": horecaIcon,
};

// Маппинг иконок для вторичного меню
const secondaryIconMap = {
    "/gallery": galleryIcon,
    "/catalogs": catalogsIcon,
    "/about-us": aboutIcon,
    "/contact": aboutIcon, // используем about иконку для контактов
};

// Объединяем основные и вторичные ссылки для мобильного меню
const allMenuItems = [...mainLinks.slice(0, 5)]; // берем первые 4 основные + 1 вторичную для мобильного меню

const menuItemsWithIcons = allMenuItems.map((link) => {
    const fullHref = link.href.startsWith("http")
        ? link.href
        : `/${lang}${link.href}`;
    const isActive =
        currentPath === fullHref ||
        (link.href !== "/" && currentPath.startsWith(fullHref));

    return {
        href: fullHref,
        icon: iconMap[link.href] || secondaryIconMap[link.href] || textileIcon, // fallback к textile иконке
        text: link[`label_${lang}`],
        isActive: isActive,
        external: link.external || false,
    };
});
---

<nav class="mobile-menu">
    <div class="-wrapper">
        {
            menuItemsWithIcons.map((item) => (
                <a
                    href={item.href}
                    class={item.isActive ? "-link active" : "-link"}
                    {...(item.external
                        ? { target: "_blank", rel: "noopener noreferrer" }
                        : {})}
                >
                    <div class="-icon">
                        <Image src={item.icon} alt={item.text} />
                    </div>
                    <span class="-text">{item.text}</span>
                </a>
            ))
        }
    </div>
</nav>

<style>
    .mobile-menu {
        z-index: 1000;
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(47, 47, 47, 0.95);
        backdrop-filter: blur(10px);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        @media (min-width: 768px) {
            display: none;
        }

        .-wrapper {
            padding: 2px 8px;
            display: flex;
            align-items: center;
            justify-content: space-around;
            max-width: 100%;
        }

        .-link {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 2px;
            color: rgba(255, 255, 255, 0.6);
            text-decoration: none;
            padding: 4px 6px;
            border-radius: 12px;
            transition: all 0.3s ease;
            min-width: 50px;

            &:hover {
                background: rgba(255, 255, 255, 0.1);
                color: #00d4ff;

                .-icon img {
                    opacity: 1;
                }
            }

            &.active {
                color: #ffffff;

                .-icon img {
                    opacity: 1;
                }
            }
        }

        .-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 24px;
            height: 24px;

            img {
                width: 20px;
                height: 20px;
                opacity: 0.6;
                transition: all 0.3s ease;
            }
        }

        .-text {
            font-size: 10px;
            font-weight: 500;
            text-align: center;
            line-height: 1.2;

            @media (max-width: 380px) {
                font-size: 9px;
            }
        }

        .-link:hover .-icon img,
        .-link.active .-icon img {
            opacity: 1;
        }
    }
</style>
