---
import collectionIcon from "../../assets/images/icons/mobile/collection.svg";
import mattressIcon from "../../assets/images/icons/mobile/mattresses.svg";
import porolonIcon from "../../assets/images/icons/mobile/porolon.svg";
import componentsIcon from "../../assets/images/icons/mobile/components.svg";
import horecaIcon from "../../assets/images/icons/mobile/horeca.svg";
import galleryIcon from "../../assets/images/icons/mobile/gallery.svg";

import { Image } from "astro:assets";
import { mainLinks, secondaryLinks } from "./Links";

const { lang = "lv" } = Astro.params;
const currentPath = Astro.url.pathname;

const iconMap = {
    "/collections": collectionIcon,
    "/mattress": mattressIcon,
    "https://porolons.lv/": porolonIcon,
    "/components": componentsIcon,
    "/horeca": horecaIcon,
    "/gallery": galleryIcon,
    "/catalogs": collectionIcon,
    "/about-us": componentsIcon,
    "/contact": horecaIcon,
};
---

<nav class="mobile-menu">
    <div class="-wrapper">
        <a href={`/${lang}/collections`} class="-link">
            <div class="-icon">
                <Image src={collectionIcon} alt="Collections" />
            </div>
            <span class="-text">Collections</span>
        </a>

        <a href={`/${lang}/mattresses`} class="-link">
            <div class="-icon">
                <Image src={mattressIcon} alt="Mattress" />
            </div>
            <span class="-text">Mattress</span>
        </a>

        <a
            href="https://porolons.lv/"
            class="-link"
            target="_blank"
            rel="noopener noreferrer"
        >
            <div class="-icon">
                <Image src={porolonIcon} alt="Porolon" />
            </div>
            <span class="-text">Porolon</span>
        </a>

        <a href={`/${lang}/components`} class="-link">
            <div class="-icon">
                <Image src={componentsIcon} alt="Components" />
            </div>
            <span class="-text">Components</span>
        </a>

        <a href={`/${lang}/gallery`} class="-link">
            <div class="-icon">
                <Image src={galleryIcon} alt="Gallery" />
            </div>
            <span class="-text">Gallery</span>
        </a>
    </div>
</nav>

<style>
    .mobile-menu {
        z-index: 1000;
        position: fixed;
        bottom: 0;
        left: 0;
        right: 0;
        background: rgba(47, 47, 47, 0.95);
        backdrop-filter: blur(10px);
        border-top: 1px solid rgba(255, 255, 255, 0.1);
        @media (min-width: 768px) {
            display: none;
        }

        .-wrapper {
            padding: 2px 8px;
            display: flex;
            align-items: center;
            justify-content: space-around;
            max-width: 100%;
        }

        .-link {
            display: flex;
            flex-direction: column;
            align-items: center;
            gap: 2px;
            color: rgba(255, 255, 255, 0.6);
            text-decoration: none;
            padding: 4px 6px;
            border-radius: 12px;
            transition: all 0.3s ease;
            min-width: 50px;

            &:hover {
                background: rgba(255, 255, 255, 0.1);
                color: #00d4ff;

                .-icon img {
                    opacity: 1;
                }
            }

            &.active {
                color: #ffffff;

                .-icon img {
                    opacity: 1;
                }
            }
        }

        .-icon {
            display: flex;
            align-items: center;
            justify-content: center;
            width: 24px;
            height: 24px;

            img {
                width: 20px;
                height: 20px;
                opacity: 0.6;
                transition: all 0.3s ease;
            }
        }

        .-text {
            font-size: 10px;
            font-weight: 500;
            text-align: center;
            line-height: 1.2;

            @media (max-width: 380px) {
                font-size: 9px;
            }
        }

        .-link:hover .-icon img,
        .-link.active .-icon img {
            opacity: 1;
        }
    }
</style>
