---
import Layout from "../../layouts/Layout.astro";
import ProductItem from "../../components/ProductItem";

export function getStaticPaths() {
	return [
		{ params: { lang: "en" } },
		{ params: { lang: "lv" } },
		{ params: { lang: "ru" } },
	];
}
const { lang } = Astro.params;

---

<Layout offset={false}>
	<ProductItem client:only lang={lang}/>
</Layout>

